    <div class="col-lg-10 col-md-12" style="overflow-y: scroll;height: 90vh;">
        <div class="container-fluid" style="background-color: white;width: 100%;padding: 0px;border-radius: 10px;box-shadow: 0px 0px 12px rgba(0,0,0,0.1);overflow: hidden">
            <div class="row">
                <div class="col-lg-4 col-md-12" style="padding: 25px 20px 30px 35px">
                    <h5 style="font-weight: bold;letter-spacing: 1px;text-align: center">Create New Tag</h5>
                    <br>
                    <form action="/admin/add-pool" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="" >Tags</label>
                                <select class="form-control" name="tags" id="tags" required>
                                    <option value="">Select a tag</option>
                                    <% for(var i=0;i<tags.length;i++){ %>
                                    <%if(tags[i].name != null){%>
                                        <option value="<%= tags[i].name %>"><%= tags[i].name %></option>
                                    <% } %>
                                    <% } %>
                                </select>
                        </div>
                        <div class="form-group">
                            <label for="">Question</label>
                            <textarea type="text" class="form-control" name="question" id="question" placeholder="Enter question" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="">Option 1</label>
                            <input type="text" class="form-control" id="option1" name="option1" placeholder="Enter 1st option" required>
                        </div>
                        <div class="form-group">
                            <label for="">Option 2</label>
                            <input type="text" class="form-control" id="option2" name="option2" placeholder="Enter 2nd option" required>
                        </div>
                        <div class="form-group">
                            <label for="">Option 3</label>
                            <input type="text" class="form-control" id="option3" name="option3" placeholder="Enter 3rd option" required>
                        </div>
                        <div class="form-group">
                            <label for="">Option 4</label>
                            <input type="text" class="form-control" id="option4" name="option4" placeholder="Enter 4th option" required>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;background-color: #556ee6">Add</button>
                    </form>
                </div>
                <div class="col-lg-8 col-md-12" style="background-color: white;text-align: center;height: 72vh;overflow-y: scroll">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Question</th>
                            <th>Option 1</th>
                            <th>Option 2</th>
                            <th>Option 3</th>
                            <th>Option 4</th>
                            <th>Edit/Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(var i =0;i<pools.length;i++){ %>
                                <tr>
                                    <th><%= i+1 %></th>
                                    <td>
                                        <p><%= pools[i].question %></p>
                                        <ul>
                                            <li><%= pools[i].option1 %></li>
                                            <li><%= pools[i].option2 %></li>
                                            <li><%= pools[i].option3 %></li>
                                            <li><%= pools[i].option4 %></li>
                                        </ul>
                                    </td>
                                    <td><%= pools[i].option1_count %></td>
                                    <td><%= pools[i].option2_count %></td>
                                    <td><%= pools[i].option3_count %></td>
                                    <td><%= pools[i].option4_count %></td>
                                    <td>
                                        <div class="row">
                                            <div class="col-6" style="text-align: center;">
                                                <a href="/admin/delete-pool/<%= pools[i].id%>" style="color: #DC3545;text-decoration: none;padding: 4px 8px;border-radius: 50%" class="confirm"><i class="fas fa-trash"></i></a>
                                            </div>
                                            <div class="col-6" style="text-align: center;">
                                                <a href="#editPool<%= i %>" data-toggle="modal" style="color: #3538dc;text-decoration: none;padding: 4px 8px;border-radius: 50%" class="confirm"><i class="fas fa-pen"></i></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <!-- Modal -->
                                <div class="modal fade" id="editPool<%= i %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="z-index: 99999999999;">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Edit Pool</h5>
                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/edit-pool/<%= pools[i].id%>" method="post" enctype="multipart/form-data">
                                                <div class="form-group">
                                                    <label for="" >Tags</label>
                                                        <select class="form-control" name="tags" id="tags" required>
                                                            <option value="<%= pools[i].tags%>"><%= pools[i].tags%></option>
                                                            <% for(var k=0;k<tags.length;k++){ %>
                                                                <%if(tags[k].name != null){%>
                                                                    <option value="<%= tags[k].name %>"><%= tags[k].name %></option>
                                                                <% } %>
                                                            <% } %>
                                                        </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Question</label>
                                                    <textarea type="text" class="form-control" name="question" id="question" placeholder="Enter question" required><%= pools[i].question %></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Option 1</label>
                                                    <input type="text" class="form-control" id="option1" name="option1" value="<%= pools[i].option1 %>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Option 2</label>
                                                    <input type="text" class="form-control" id="option2" name="option2" value="<%= pools[i].option2 %>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Option 3</label>
                                                    <input type="text" class="form-control" id="option3" name="option3" value="<%= pools[i].option3 %>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Option 4</label>
                                                    <input type="text" class="form-control" id="option4" name="option4" value="<%= pools[i].option4 %>" required>
                                                </div>
                                                <button type="submit" class="btn btn-primary" style="width: 100%;background-color: #556ee6">Edit</button>
                                            </form>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <br>
        </div>
        </div>
        </div>
<br>

