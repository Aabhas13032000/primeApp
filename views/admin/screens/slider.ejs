<script>
    $('a.confirm').on('click', function(){
        if(!confirm('Confirm Deletion')){
            return false;
        }
    });
    function changeCategory(i){
        var a = document.getElementById('category'+i).value;
        var slider_id = document.getElementById('slider_id'+i).value;
        $.ajax({
            url:"/admin/changeSliderCategory/" + a + '/' + slider_id,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('success');
                location.reload();
            },
            error: function(err){
                console.log(err.status);
            }
        });
    };
    $('#state').change(function(){
        var a = document.getElementById('state').value;
        var select = document.getElementById("city");
        var length = select.options.length;
        for (var i = length-1; i >= 0; i--) {
            select.options[i] = null;
        }
        $.ajax({
            // url:"/admin/getCity/" + a,
            url:"/admin/getSubCategory/" + a,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                var b = data;
                if(b.length == 0){
                    var option = document.createElement("option");
                    option.text = "No City Present";
                    option.value= "other";
                    select.add(option);
                } else {
                    for(var i=0;i<b.length;i++){
                        var option = document.createElement("option");
                        option.text = b[i].name;
                        option.value= b[i].name;
                        select.add(option);
                    }
                }
            },
            error: function(err){
                console.log(err.status);
            }
        });
    });


    function sortTable(query) {
        // console.log(query);
        var input, filter, table, tr, td, i, txtValue;
            // input = document.getElementById("myInput");
            filter = query;
            table = document.getElementById("mytable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                // console.log(td);
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
    }

    function getcity(a){
        // var a = document.getElementById('state2').value;
        // console.log(a);
        var select = document.getElementById("cities");
        // console.log(select);
        var length = select.options.length;
