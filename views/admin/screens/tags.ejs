                <div class="col-lg-4 col-md-12" style="padding: 25px 20px 30px 35px">
                    <h5 style="font-weight: bold;letter-spacing: 1px;text-align: center">Create New Tag</h5>
                    <br>
                    <form action="/admin/add-Tag" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="">Tag Name</label>
                            <input type="text" class="form-control" id="tagname" name="tagname" onkeyup="checkTagname()" placeholder="Enter Tag Name" required>
                            <small id="checkTagname" class="form-text" style="text-align: center;"></small>
                        </div>
                        <div class="form-group">
                            <input type="file" class="form-control-file" name="images" id="img" accept="image/x-png,image/gif,image/jpeg" onchange="showPreview('image-preview',this.files)" required>
                        </div>
                        <div style="width: 100px;height: 100px;">
                            <img src="/images/no_image.jpeg" alt="" id="image-preview" style="width: 100%">
                        </div>
                        <button type="submit" id="verifyTag" class="btn btn-primary" style="width: 100%;background-color: #556ee6" disabled>Add</button>
                    </form>
                </div>
                <div class="col-lg-8 col-md-12" style="background-color: white;text-align: center;height: 72vh;overflow-y: scroll">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Name</th>
                            <th style="width:50%">Image</th>
                            <th>Option</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(var i =0;i<tags.length;i++){ %>
                                <tr>
                                    <th><%= i+1 %></th>
                                    <th><%= tags[i].name %></th>
                                    <td><img src="/images/tag/<%= tags[i].image %>" alt="" width="50%"></td>
                                    <%if(role_id == 1){%>
                                        <td>
                                            <div class="row">
                                                <div class="col-12" style="text-align: center;">
                                                    <a href="/admin/delete-tags/<%= tags[i].id%>" style="color: #DC3545;text-decoration: none;padding: 4px 8px;border-radius: 50%" class="confirm"><i class="fas fa-trash"></i></a>
                                                </div>
                                            </div>
                                        </td>
                                    <%} else if(role_id == 2) {%>
                                    <%if(admin_id == tags[i].user_id){%>
                                        <td>
                                            <div class="row">
                                                <div class="col-12" style="text-align: center;">
                                                    <a href="/admin/delete-tags/<%= tags[i].id%>" style="color: #DC3545;text-decoration: none;padding: 4px 8px;border-radius: 50%" class="confirm"><i class="fas fa-trash"></i></a>
                                                </div>
                                            </div>
                                        </td>
                                    <%} else {%>
                                        <td>Not allowed to delete</td>
                                    <%}%>
                                    <%}%>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
