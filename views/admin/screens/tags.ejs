<br>

<script>
    function showPreview(id,files){
        if(files) {
            var reader = new FileReader();

            reader.onload = function(event) {
                $('#'+ id).attr('src',event.target.result);
            }
            reader.readAsDataURL(files[0]);
        }
    }
    $('a.confirm').on('click', function(){
        if(!confirm('Confirm Deletion')){
            return false;
        }
    });
    function checkTagname(){
        var c = document.getElementById('tagname').value;
        $.ajax({
            url:"/admin/searchTagname/" + c,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                if(data[0] != undefined){
                    document.getElementById('checkTagname').innerHTML = " Tag name already exists";
                    document.getElementById('checkTagname').style.color = "rgb(255, 31, 31)";
                    $('#verifyTag').attr("disabled","disabled");
                } else {
                    document.getElementById('checkTagname').innerHTML = "";
                    $('#verifyTag').removeAttr("disabled");
                }
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    $(document).ready(function(){
        $("img").bind("error",function(){
            // Replacing image source
            $(this).attr("src","/images/no_image.jpeg");
        });
    });
</script>

