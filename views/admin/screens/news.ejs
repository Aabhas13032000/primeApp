<input type="hidden" name="role_id" id="role_id" value=<%=role_id%>>
<script>

    var offset = 20;
    $('#url').change(function (){
        window.location.href = this.value;
    });
    function approved(a){
        $.ajax({
            url:"/admin/notapproved/" + a,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('done');
                window.location.href = window.location.href;
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    function notapproved(a){
        $.ajax({
            url:"/admin/approved/" + a,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('done');
                window.location.href = window.location.href;
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    function unchecked(a){
        $.ajax({
            url:"/admin/notimportant/" + a,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('done');
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    function checkedit(a){
        $.ajax({
            url:"/admin/important/" + a,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('done');
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    $('a.confirm').on('click', function(){
        if(!confirm('Confirm Deletion')){
            return false;
        }
    });

    function myFunction() {
        var query = document.getElementById('query').value;
        if(query == "title"){
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                console.log(td);
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        } else if(query == "subcategory"){
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[2];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        } else if(query == "category"){
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    }
    function sendNotification(title,description){
        $.ajax({
            url:"/admin/sendNotification/" + title + '/' + description,
            dataType: "jsonp",
            type:"GET",
            success: function(data){
                console.log('done');
                if(data.message == 'error'){
                    alert('Notification Not Sent, Something went wrong');
                } else {
                    alert('Notification Sent');
                }
            },
            error: function(err){
                console.log(err.status);
            }
        });
    }
    var j = offset+1;
    var role_id = document.getElementById('role_id').value;
    function getMoreNews(user,is_approved){
        $.ajax({
            url:"/admin/getMoreNews/" + user + '/' + is_approved + '/' + offset,
            dataType: "jsonp",
            type:"GET",
            success: function(news){
                // console.log(news);
                if(news.length != 0){
                    // console.log(news);
                    for(var i=0;i<news.length;i++,j++){
                        var news_title = `${news[i].title}`;
                        var news_short_description = `${news[i].short_description}`;
                        if(role_id == 1 || role_id == 2){
                            if(news[i].imp == 1){
                                var imp = '<td style="text-align: center;padding: 0"><div class="form-group"><input type="checkbox" name="is_imp" id="" value="'+ news[i].news_id +'" onchange="unchecked(this.value)" checked></div></td>';
                            } else {
                                var imp = '<td style="text-align: center;padding: 0"><div class="form-group"><input type="checkbox" name="is_not_imp" id="" onchange="checkedit(this.value)" value="'+ news[i].news_id +'"></div></td>';
                            }
                            if(news[i].is_approved == 1){
                                var approve = '<td style="text-align: center;padding: 0"><div class="form-group"><input type="checkbox" name="is_approved" id="" value='+ news[i].news_id +' onchange="approved(this.value)" checked></div></td>';
                            } else {
                                var approve = '<td style="text-align: center;padding: 0"><div class="form-group"><input type="checkbox" name="is_not_approved" id="" value="'+ news[i].news_id +'" onchange="notapproved(this.value)"></div></td>';
                            }
                            var notification = '<td style="padding: 0"><div class="row" style="margin-top: 5px"><div class="col-12" style="text-align: center"><a href="#" onclick="sendNotification('+ news_title +','+ news_short_description +')" style="background-color: #007BFF;color:white;text-decoration: none;padding: 4px 7px;border: 0" class="btn btn-primary">Send</a></div></div></td>';
                            $('#addNews').append('<tr><th style="padding: 0 5px">'+j+'</th><td style="padding: 0"><p style="height: 40px;overflow: hidden;padding: 0;margin: 0">'+ news[i].title +'</p></td><td style="padding: 0">'+ news[i].c_name +'</td><td style="padding: 0">'+ news[i].city +'</td><td style="padding: 0"><div class="row" style="margin-top: 5px"> <div class="col-6"> <a href="/edit-news/'+ news[i].news_id +'" style="background-color: #007BFF;color:white;text-decoration: none;padding: 4px 7px;border: 0" class="btn btn-primary">Edit</a></div><div class="col-6"><a href="/delete-news/'+ news[i].news_id +'" style="background-color: #DC3545;text-decoration: none;padding: 4px 8px;border:0;color: white" class="confirm btn btn-primary">Delete</a></div></div></td>'+imp+''+ approve +' '+notification+'<td>'+ news[i].u_name +'</td></tr>');
                        } else if(role_id == 3) {
                            $('#addNews').append('<tr><th style="padding: 0 5px">'+j+'</th><td style="padding: 0"><p style="height: 40px;overflow: hidden;padding: 0;margin: 0">'+ news[i].title +'</p></td><td style="padding: 0">'+ news[i].c_name +'</td><td style="padding: 0">'+ news[i].city +'</td><td style="padding: 0"><div class="row" style="margin-top: 5px"> <div class="col-6"> <a href="/edit-news/'+ news[i].news_id +'" style="background-color: #007BFF;color:white;text-decoration: none;padding: 4px 7px;border: 0" class="btn btn-primary">Edit</a></div></div></td></tr>');
                        }
                    }
                }
            },
            error: function(err){
                console.log(err.status);
            }
        });
        offset = offset +5;
    }
</script>
